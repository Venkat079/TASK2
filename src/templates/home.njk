{% extends "layout.njk" %}
{% set title = "Home - AcmeCloud" %}
{% set active = "home" %}

{% block content %}

<!-- Hero Section -->
<section class="hero bg-primary text-white text-center py-5">
  <div class="container">
    <h1 class="display-4 fw-bold">Smarter Cloud Solutions for Modern Businesses</h1>
    <p class="lead mt-3 mb-4">AcmeCloud helps startups and enterprises scale with powerful, secure, and cost-effective infrastructure.</p>
    <a href="contact.html" class="btn btn-light btn-lg px-4">Get Started</a>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="fw-bold">Why Choose AcmeCloud?</h2>
      <p class="text-muted">We’re trusted by 200+ teams to deploy and scale fast.</p>
    </div>
    <div class="row g-4 text-center">
      <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100">
          <div class="mb-3">
            <i class="bi bi-lightning-charge-fill text-primary" style="font-size: 2rem;"></i>
          </div>
          <h5 class="fw-bold">Instant Deployment</h5>
          <p class="text-muted">Launch projects in seconds with our blazing-fast infrastructure. No setup, no stress.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100">
          <div class="mb-3">
            <i class="bi bi-globe-americas text-success" style="font-size: 2rem;"></i>
          </div>
          <h5 class="fw-bold">Global CDN</h5>
          <p class="text-muted">Deliver content worldwide instantly with our fast, multi-region CDN network.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 bg-white rounded shadow-sm h-100">
          <div class="mb-3">
            <i class="bi bi-code-slash text-danger" style="font-size: 2rem;"></i>
          </div>
          <h5 class="fw-bold">Developer Friendly</h5>
          <p class="text-muted">Git integrations, preview deployments, and full control over infrastructure in one place.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- About Section -->
<section class="py-5" style="background: linear-gradient(to right, #6a11cb, #2575fc); color: white;">
  <div class="container text-center">
    <h2 class="fw-bold mb-3">About AcmeCloud</h2>
    <p class="lead mb-0">We are a next-gen cloud platform redefining how teams build, deploy, and scale web applications.</p>
  </div>
</section>

<!-- Call-to-Action Section -->
<section class="py-5 bg-warning text-dark text-center">
  <div class="container">
    <h2 class="fw-bold mb-3">Start Your Cloud Journey Today</h2>
    <p class="mb-4">Let’s work together to take your infrastructure to the next level.</p>
    <a href="contact.html" class="btn btn-dark btn-lg">Contact Sales</a>
  </div>
</section>

{% endblock %}
